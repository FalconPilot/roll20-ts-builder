{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "outDir": "./build/",
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES3",
    "lib": ["es2019", "dom", "dom.iterable"],
    "paths": {
      "$types/*": ["src/types/*"],
      "$utils/*": ["src/utils/*"],
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
